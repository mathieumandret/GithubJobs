<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item" type="com.example.githubjobs.data.local.model.Position"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="4dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    tools:text="DÃ©veloppeur android"
                    android:text="@{item.title}"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/positionTitleTv"/>
            <TextView
                    tools:text="Toulouse"
                    android:text="@{item.location}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/positionPlaceTv"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>
